{
  "id": "zsh-setup",
  "version": "0.1.4",
  "name": "Zsh setup",
  "description": "Configure zsh, oh-my-zsh, conda, and custom aliases.",
  "options": {
    "username": {
      "type": "string",
      "default": "vscode",
      "description": "Username to configure"
    },
    "theme": {
      "type": "string",
      "default": "agnoster",
      "description": "Oh My Zsh theme name"
    },
    "plugins": {
      "type": "string",
      "default": "git zsh-autosuggestions zsh-syntax-highlighting",
      "description": "Space/comma-separated list of Oh My Zsh plugins to enable"
    }
  },
  "installsAfter": [
    "ghcr.io/MilkClouds/devcontainer-features/system-tools",
    "ghcr.io/MilkClouds/devcontainer-features/python-tools"
  ]
}
